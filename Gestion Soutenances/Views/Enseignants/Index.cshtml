@model IEnumerable<Gestion_Soutenances.Models.Enseignant>

@{
    ViewData["Title"] = "Index";

}
@if (TempData["SuccessMessage"] != null)
{

<div class="alert alert-success">
    @TempData["SuccessMessage"]
    <button type="button" class="close" data-dismiss="alert">
        <span>&times;</span>
    </button>

</div>

}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Liste des Enseignants</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-hover">
            <h1>Index</h1>

            <p>
                <a asp-action="Create">Ajouter un Enseignant</a>
            </p>
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nom)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Prenom)
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nom)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Prenom)
                        </td>
                        
                        <td class="project-actions text-left">
                            <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.Id">
                                <i class="fas fa-folder">
                                </i>
                                View
                            </a>
                            <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.Id">
                                <i class="fas fa-pencil-alt">
                                </i>
                                Edit
                            </a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">
                                <i class="fas fa-trash">
                                </i>
                                Delete
                            </a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>window.setTimeout(function () {
        $(".alert").fadeTo(500, 0).slideUp(500, function () {
            $(this).remove();
        });
    }, 3000);</script>