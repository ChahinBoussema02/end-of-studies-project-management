@model Gestion_Soutenances.Models.PFE

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">Details</h1>

<div class="container">
    <h4 class="mt-4 mb-3">PFE</h4>
    <hr />

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">PFE</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    <strong>@Html.DisplayNameFor(model => model.titre)</strong>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.titre)
                </dd>

                <dt class="col-sm-2 mt-3">
                    <strong>@Html.DisplayNameFor(model => model.desc)</strong>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.desc)
                </dd>

                <dt class="col-sm-2 mt-3">
                    <strong>@Html.DisplayNameFor(model => model.DateD)</strong>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DateD)
                </dd>

                <dt class="col-sm-2 mt-3">
                    <strong>@Html.DisplayNameFor(model => model.DateF)</strong>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DateF)
                </dd>

                <dt class="col-sm-2 mt-3">
                    <strong>@Html.DisplayNameFor(model => model.EncadrantId)</strong>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EncadrantId)
                </dd>

                <dt class="col-sm-2 mt-3">
                    <strong>@Html.DisplayNameFor(model => model.Societe)</strong>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Societe.Adresse)
                </dd>
            </dl>
        </div>

        <div class="card-footer">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.PFEID">Edit</a>
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
