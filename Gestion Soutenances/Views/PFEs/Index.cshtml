@model IEnumerable<Gestion_Soutenances.Models.PFE>

@{
    ViewData["Title"] = "Index";
}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Liste des PFEs</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-hover">

            <h1>Index</h1>

            <p>
                <a asp-action="Create">Ajouter un PFE</a>
            </p>
   
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.titre)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.desc)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DateD)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DateF)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EncadrantId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Societe)
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.titre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.desc)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateD)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateF)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EncadrantId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Societe.Lib)
                            </td>
                            <td class="project-actions text-left">
                                <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.PFEID">
                                    <i class="fas fa-folder">
                                    </i>
                                    View
                                </a>
                                <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.PFEID">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Edit
                                </a>
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.PFEID">
                                    <i class="fas fa-trash">
                                    </i>
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
